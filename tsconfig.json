{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,

    "noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

    "outDir": "./main",
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}